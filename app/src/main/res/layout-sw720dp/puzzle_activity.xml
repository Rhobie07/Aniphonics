<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/portrait_bg">

    <Button
        android:id="@+id/Back"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/arrow"
        android:contentDescription="@string/start_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/puzzle1"
                android:layout_width="300dp"
                android:layout_height="250dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shadow_border"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/cat_puzzle" />

            <ImageButton
                android:id="@+id/puzzle2"
                android:layout_width="300dp"
                android:layout_height="250dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shadow_border"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/cow_puzzle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/puzzle3"
                android:layout_width="300dp"
                android:layout_height="250dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shadow_border"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/dog_puzzle" />

            <ImageButton
                android:id="@+id/puzzle4"
                android:layout_width="300dp"
                android:layout_height="250dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shadow_border"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/duck_puzzle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/puzzle5"
                android:layout_width="300dp"
                android:layout_height="250dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shadow_border"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/hamster_puzzle" />

            <ImageButton
                android:id="@+id/puzzle6"
                android:layout_width="300dp"
                android:layout_height="250dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shadow_border"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/tiger_puzzle" />
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>