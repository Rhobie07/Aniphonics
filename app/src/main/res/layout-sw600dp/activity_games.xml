<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/portrait_bg"
    tools:context=".NamesSoundsActivity">

    <Button
        android:id="@+id/Back"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/arrow"
        android:contentDescription="@string/start_button" />

    <Button
        android:id="@+id/Next"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_marginStart="360dp"
        android:layout_centerVertical="true"
        android:background="@drawable/next"
        android:contentDescription="@string/next_button" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/name_sounds_title" />

    <ImageButton
        android:id="@+id/farm"
        android:layout_width="233dp"
        android:layout_height="186dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="170dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/shadow_border"
        android:contentDescription="@string/bg_names"
        android:scaleType="fitCenter"
        android:src="@drawable/farm_bg" />

    <ImageButton
        android:id="@+id/pet"
        android:layout_width="231dp"
        android:layout_height="190dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="370dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/shadow_border"
        android:contentDescription="@string/bg_names"
        android:scaleType="fitCenter"
        android:src="@drawable/pets_bg" />

    <ImageButton
        android:id="@+id/forest"
        android:layout_width="233dp"
        android:layout_height="189dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="570dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/shadow_border"
        android:contentDescription="@string/bg_names"
        android:scaleType="fitCenter"
        android:src="@drawable/forest_bg" />

</RelativeLayout>