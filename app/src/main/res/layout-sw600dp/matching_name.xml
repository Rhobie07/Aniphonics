<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/portrait_bg"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Puzzle_Game.Matching_Sound.Matching_Name.Matching_Name">

    <Button
        android:id="@+id/Back"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/arrow"
        android:contentDescription="@string/start_button" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageGuess1"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:scaleType="fitCenter"
            android:background="#00000000"
            />

        <ImageButton
            android:id="@+id/imageGuess2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="70dp"
            android:scaleType="fitCenter"
            android:background="#00000000"
            />

        <ImageButton
            android:id="@+id/imageGuess3"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:background="#00000000"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="215dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/correctWrong1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:scaleType="fitCenter"
            android:background="#00000000"
            />

        <ImageView
            android:id="@+id/correctWrong2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:layout_marginStart="120dp"
            android:background="#00000000"
            />

        <ImageView
            android:id="@+id/correctWrong3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:layout_marginStart="120dp"
            android:background="#00000000"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="700dp"
         />

</RelativeLayout>